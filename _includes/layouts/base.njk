<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ renderData.title or title or metadata.title }}</title>
    <meta name="Description" content="{{ renderData.description or description or metadata.description }}">
    <link rel="stylesheet" href="{{ '/css/index.css' | url }}">
    <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}">
    {% if key %}
      <meta name="twitter:card" content="summary_large_image">
      <meta name="twitter:creator" content="@dancwilson">
      <meta name="twitter:title" content="{{renderData.title or title or metadata.title}}">
      <meta name="twitter:image" content="{{ '/img/' | url }}{{ key }}.jpg">
    {% endif %}
  </head>
  <body>
    <header>
      <h1 class="home">
        <a href="{{ '/' | url }}">
          <svg viewBox="0 0 300 150" width="300" height="150">
            <title>Lively Chalk</title>
            <g stroke-width="16" fill="none">
              <circle cx="150" cy="150" r="140" stroke="hsl(343,100%,50%)" />
              <circle cx="150" cy="150" r="120" stroke="hsl(43,100%,50%)" />
              <circle cx="150" cy="150" r="100" stroke="hsl(63,100%,50%)" />
              <circle cx="150" cy="150" r="80" stroke="hsl(143,100%,50%)" />
              <circle cx="150" cy="150" r="60" stroke="hsl(193,100%,50%)" />
              <circle cx="150" cy="150" r="40" stroke="hsl(293,100%,50%)" />
            </g>
          </svg>
        </a>
      </h1>
    </header>

    <main{% if templateClass %} class="{{ templateClass }}"{% endif %}>
      {{ content | safe }}
    </main>

    <footer></footer>

    <!-- Current page: {{ page.url | url }} -->
  </body>
</html>
