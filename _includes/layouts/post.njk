---
layout: layouts/base.njk
templateClass: tmpl-post
---

<ul class="tag-list">
{% for tag in tags %}
  {%- if collections.tagList.indexOf(tag) != -1 -%}
  {% set tagUrl %}/tags/{{ tag }}/{% endset %}
  <li><a href="{{ tagUrl | url }}" class="tag">{{tag | replace("-", " ")}}</a></li>
  {%- endif -%}
{% endfor %}
</ul>

<img src="/img/{{ key }}.jpg?nf_resize=fit&w=1800&h=1800" alt="{{ content }}" />

{{ content | safe }}
